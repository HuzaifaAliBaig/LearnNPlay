<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/background">

    <TextView
            android:id="@+id/fullscreen_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:orientation="horizontal"
                android:layout_marginTop="37dp">

            <ImageView
                    android:id="@+id/signinback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp" />

            <TextView
                    android:id="@+id/Back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:textSize="22dp"
                    android:textColor="#ADCCE2"
                    android:layout_gravity="center"
                    android:gravity="center" />
        </LinearLayout>

        <TextView
                android:id="@+id/english"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rect"
                android:text="ENGLISH"
                android:textColor="#fff"
                android:padding="16dp"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginTop="58dp"
                android:layout_alignTop="@+id/signinmain"
                android:layout_centerHorizontal="true" />

        <TextView
                android:id="@+id/math"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rectblue"
                android:text="MATH"
                android:textColor="#fff"
                android:padding="16dp"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginTop="66dp"
                android:layout_below="@+id/signinmain"
                android:layout_alignLeft="@+id/english"
                android:layout_alignStart="@+id/english" />

        <ImageView
                android:id="@+id/imageView3"
                android:background="@drawable/logomain"
                android:layout_width="187dp"
                android:layout_height="134dp"
                android:layout_marginTop="8dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="24dp"
                android:layout_marginEnd="24dp"/>

        <TextView
                android:id="@+id/signinmain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Category"
                android:textColor="@android:color/holo_green_light"
                android:gravity="center"
                android:textSize="36sp"
                android:paddingBottom="40dp"
                android:layout_marginTop="91dp"
                android:layout_below="@+id/imageView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
    </RelativeLayout>
</FrameLayout>
